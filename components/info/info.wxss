.info {
    position: fixed;
    left: 0;
    top: 0;
    display: flex;
    text-align: center;
    flex-direction: column;
    justify-content: center;
    width: 100%;
    height: 100vh;
    z-index: 998;
}

.info .bg {
    position: absolute;
    left: 0;
    top: 0;
    width: 100%;
    height: 100vh;
    background: rgba(0, 0, 0, .8);
}

.info .box {
    position: relative;
    text-align: center;
    background: #fff;
    width: 70%;
    margin: 0 auto;
    border-radius: 2%;
    padding: 10% 0 40rpx 0;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
}

.info .box .avatar {
    width: 100rpx;
    height: 100rpx;
    padding: 0;
    margin-bottom: 40rpx;
}

.info .box .nickname {
    width: 100%;
    display: flex;
    align-items: center;
    padding: 20rpx 30rpx;
    box-sizing: border-box;
    border-top: 1px solid #ddd;
    border-bottom: 1px solid #ddd;
}
.info .close{
    width: 50rpx;
    height: 50rpx;
    display: flex;
    flex-direction: column;
    justify-content: center;
    text-align: center;
    border-radius: 50rpx;
    border: 2rpx solid #fff;
    color: #fff;
    z-index: 999;
    margin: 80rpx auto;
}